
<% @banner_photo = 'background.jpg' %>
<%= render 'shared/banner' %>

<div class="container padded">
  <div class="row">
    <div class="col-xs-12 text-center">
      <h2>Our cocktails</h2>
    </div>
  </div>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12">
        <div class="product">
          <div class='product-upvote'>
            <!-- <div class="product-arrow"></div> -->
            <%= link_to "", upvote_cocktail_path(cocktail.id), method: :patch, class: "product-arrow" %>
            <div class='product-count'><%= cocktail.rating %></div>
          </div>
          <div class="product-body">
            <%= link_to (cocktail) do %>
              <% if cocktail.photo? %>
                  <%= cl_image_tag cocktail.photo.path, width: 200, height: 175, crop: :fill, class: "product-image" %>
                <% else %>
                  <%= image_tag ('summer_cocktails.jpg'), class: "product-image" %>
                <% end %>
                <h3><%= cocktail.name %></h3>
            <% end %>
          </div>
          <ul class="list-inline product-controls hidden-sm hidden-xs">
            <li><a href=""><i class="fa fa-heart"></i></a></li>
            <li><a href=""><i class="fa fa-share"></i></a></li>
            <li><a href=""><i class="fa fa-star"></i></a></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>s
