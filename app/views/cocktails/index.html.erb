<%= render 'shared/banner' %>

<div class="container padded">
  <div class="row">
    <div class="col-xs-12 text-center">
      <h2>Our cocktails</h2>
    </div>
  </div>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card", style="background-image: linear-gradient(20deg, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.2) 65%), url(<%= image_path "summer_cocktails.jpg" %>);">
          <%= link_to "", cocktail_path(cocktail.id), {class: "card-link"}%>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>





